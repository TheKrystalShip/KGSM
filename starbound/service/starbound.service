[Unit]
Description=Starbound Dedicated Server
StartLimitIntervalSec=10
After=network.target

[Service]
User=cristian
WorkingDirectory=/home/cristian/servers/starbound
ExecStart=/home/cristian/servers/starbound/manage.sh --start
ExecStop=/home/cristian/servers/starbound/manage.sh --stop

Restart=on-failure
RestartSec=5
StartLimitBurst=1

[Install]
WantedBy=multi-user.target
