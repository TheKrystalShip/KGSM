[Unit]
Description=Core Keeper Dedicated Server
StartLimitIntervalSec=10
After=network.target

[Service]
User=cristian
WorkingDirectory=/opt/corekeeper
ExecStart=/opt/corekeeper/manage.sh --start
ExecStop=/opt/corekeeper/manage.sh --stop

Restart=on-failure
RestartSec=5
StartLimitBurst=1

[Install]
WantedBy=multi-user.target
