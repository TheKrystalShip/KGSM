[Unit]
Description=$INSTANCE_ID Dedicated Server
Requires=$INSTANCE_ID.socket

[Service]
User=$INSTANCE_USER
WorkingDirectory=$INSTANCE_WORKING_DIR
ExecStart=$INSTANCE_MANAGE_FILE --start
ExecStop=$INSTANCE_MANAGE_FILE --stop
NonBlocking=true

Restart=on-failure
RestartSec=5
StartLimitBurst=1

Sockets=$INSTANCE_ID.socket
StandardInput=socket
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
