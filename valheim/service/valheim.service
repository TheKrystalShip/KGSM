[Unit]
Description=Valheim Dedicated Server
StartLimitIntervalSec=10
After=network.target

[Service]
User=cristian
WorkingDirectory=/opt/valheim/install
ExecStart=/opt/valheim/manage.sh --start
ExecStop=/opt/valheim/manage.sh --stop

Restart=on-failure
RestartSec=5
StartLimitBurst=1

[Install]
WantedBy=multi-user.target
